@model  List<ASPdotNetMVCframework.Context.ProductTable>

@{
    ViewBag.Title = "ProductList";
}

<table class="table table-hover">
    <tr>
        <th>Product Name</th>
        <th>Product Price</th>
    </tr>
    @foreach(var i in Model)
     {
        <tr>
            <td>@i.productName</td>
            <td>@i.productPrice</td>
            <td>
                <a href="@Url.Action("updateProduct",new {objTbl = i.productId,i.productName,i.productPrice})" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="@Url.Action("deleteProduct",new{projectId = i.productId})" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
     }
</table>